<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security" 
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd"> 

	<beans:bean id="roleVoter" class="org.springframework.security.access.vote.RoleVoter">
	    <beans:property name="rolePrefix" value=""/>
	</beans:bean>
	
	<beans:bean id="authenticatedVoter" class="org.springframework.security.access.vote.AuthenticatedVoter"/>   

	<beans:bean id="accessDecisionManager" class="org.springframework.security.access.vote.AffirmativeBased">
	    <beans:constructor-arg >
	        <beans:list>
	            <beans:ref bean="roleVoter"/>
	            <beans:ref bean="authenticatedVoter"/>
	        </beans:list>
	    </beans:constructor-arg>
	</beans:bean>

	<http auto-config="true" use-expressions="true">
		<access-denied-handler error-page="/403" />
 		<intercept-url pattern="/login*" access="permitAll" /> 
 		<intercept-url pattern="/webjars/**" access="permitAll" /> 		
 		<intercept-url pattern="/resources/**" access="permitAll" />
 		<intercept-url pattern="/estagiario/cadastre-se" access="permitAll" />
 		<intercept-url pattern="/frequencia/minha-presenca**" access="hasRole('ROLE_ESTAGIARIO')"/>
 		<intercept-url pattern="/estagiario/**" access="hasRole('ROLE_ESTAGIARIO')"/>
 		<intercept-url pattern="/frequencia/**" access="hasRole('ROLE_COORDENADOR')"/>

 		<intercept-url pattern="/coordenador/**" access="hasRole('ROLE_COORDENADOR')"/>
 		<intercept-url pattern="/periodo/**" access="hasRole('ROLE_COORDENADOR')"/>
 		<intercept-url pattern="/turma/**" access="hasRole('ROLE_COORDENADOR')"/>

 		<form-login login-page="/login" default-target-url="/" authentication-failure-url="/loginfailed" authentication-success-handler-ref="loginSucess" />
 		<logout logout-success-url="/login" invalidate-session="true"/> 	
 	</http>
 	
	<beans:bean id="loginSucess" class="ufc.quixada.npi.gp.service.impl.AuthenticationSuccessHandlerImpl" />

 	<!-- <beans:bean id="myAuthenticationSuccessHandler" class="ufc.quixada.npi.afastamento.service.SimpleUrlAuthenticationSuccessHandler" /> -->
 	
 	<beans:bean id="ldapAuthentication" class="ufc.quixada.npi.gp.service.LdapAuthentication"></beans:bean>
 
		<authentication-manager alias="authenticationManager">
		    <authentication-provider ref="ldapAuthentication"></authentication-provider>
		</authentication-manager>

  	<global-method-security  secured-annotations = "enabled"  />

</beans:beans>